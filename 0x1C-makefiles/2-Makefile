# set GCC compiler as variable
CC=gcc

# object files to compile to final program
SRC=main.c school.c
OBJ=$(SRC:.c=.o)

# This is the flag to compile source files to object code
CFLAGS=-c

# Name of the executable (filnal output file)
NAME=school

all: prog

prog: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c
	$(CC) $(CFLAGS) -o $@ main.c

school.o: school.c
	$(CC) $(CFLAGS) -o $@ school.c
clean:
	rm -rf $(NAME) *.o
